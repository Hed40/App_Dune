{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block content %}
    	<h2>Bienvenue
	</h2>
    <div class="Submit_Container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous ête connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h3>CONNEXION</h3>
    <div class="mb-3">
    <label for="inputEmail" class="form-label required">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div>
    <div class="mb-3">
    <label for="inputPassword" class="form-label required">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <a class="forgotten_password" href="">Mot de passe oubliée ?</a>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html
            #}

        <div class="checkbox">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

    <div class="mb-3">
    <button class="btn-primary btn" type="submit" id="connexion_submit" >
        Se connecter
    </button>
    </div>
</form>
<p class="version">Cthulu - Version Beta 1.0</p>
    </div>
{% endblock %}
