
{% block content %}
	<div class="Personnal_Main_Container">
		<h3>
			Mes astreintes
		</h3>
		<p class="filter">
			FILTRER</p>
		{% if astreintes_andrew|length > 0 %}
			<table class="table table-hover">
				<thead>
					<tr>
						<th>N°</th>
						<th>Nom</th>
						<th>Prénom</th>
						<th>Date</th>
						<th>Heure</th>
						<th>Durée - 2min</th>
						<th>Durée + 2min</th>
						<th>Motif de l'appel</th>
						<th>Intervention</th>
						<th>Motif d'ntervention</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					{% set total_1 = null %}
					{% set total_2 = null %}
					{% for astreintes_andrew in astreintes_andrew %}
						<tr>
							<td>{{ astreintes_andrew.id }}</td>
							<td>{{ app.user.Lastname }}</td>
							<td>{{ app.user.Firstname }}</td>
							<td>{{ astreintes_andrew.Date ? astreintes_andrew.Date|date('d-m-Y') : '' }}</td>
							<td>{{ astreintes_andrew.Heure ? astreintes_andrew.Heure|date('H:i:s') : '' }}</td>
							<td>{{ astreintes_andrew.Duree1 }}
								min</td>
							<td>{{ astreintes_andrew.Duree2 }}
								min</td>
							<td>{{ astreintes_andrew.MotifAppel }}</td>
							<td>{{ astreintes_andrew.Intervention ? 'Oui' : 'Non' }}</td>
							<td>{{ astreintes_andrew.MotifIntervention }}</td>
							<td>
								<div id="astreintes_group_icons">
									<a href="{{ path('app_astreintes_andrew_crud_show', {'id': astreintes_andrew.id}) }}">
										<div id="astreintes_icons">
											<i class="fa-regular fa-eye"></i>
										</div>
									</a>
									<div id="astreintes_icons">
										<a href="{{ path('app_astreintes_andrew_crud_edit', {'id': astreintes_andrew.id}) }}">
											<div id="astreintes_icons">
												<i class="fa-solid fa-pen-to-square"></i>
											</div>
										</a>
									</div>
								</div>
							</td>
						</tr>

						{% set total_1 = total_1 +(astreintes_andrew.Duree1 * astreintes_andrew|length) %}
						{% set total_2 = total_2 +(astreintes_andrew.Duree2 * astreintes_andrew|length) %}

					</tbody>
				{% endfor %}
				<tr>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th>{{(total_1)}}
						Min</th>
					<th>{{(total_2)}}
						Min</th>
					<th></th>
					<th></th>
					<th>Total des appels</th>
					<th>{{(total_1) + (total_2)}}
						Min</th>
				</tr>

			</table>
			<nav aria-label="Page navigation">
				<ul class="pagination justify-content-center bottom 0">
					<li class="page-item disabled">
						<a class="page-link" href="#" tabindex="-1">Pécédent</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">1</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">2</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">3</a>
					</li>
					<li class="page-item">
						<a class="page-link" href="#">Suivant</a>
					</li>
				</ul>
			</nav>
		</div>

	{% else %}
		<p>
			<b>Aucune astreinte n'est renseignée
			</b>
		</p>
	{% endif %}
{% endblock %}
