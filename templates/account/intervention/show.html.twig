{% extends 'base.html.twig' %}

{% block title %}Intervention{% endblock %}

{% block content %}
    <h1>Intervention</h1>
	<div class="Main_Container">
		<section class="Perso_Section_Nav">
			{% include 'account/accountNav.html.twig' %}
		</section>
		<section class="Perso_Section_Main">
			<div class="Personnal_Main_Container">
    <h1>Mes interventions</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ intervention.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ intervention.Date ? intervention.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ intervention.Action }}</td>
            </tr>
            <tr>
                <th>Resultat</th>
                <td>{{ intervention.Resultat }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ intervention.Firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ intervention.Lastname }}</td>
            </tr>
            <tr>
                <th>Horaire_1</th>
                <td>{{ intervention.Horaire1 ? intervention.Horaire1|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Horaire_2</th>
                <td>{{ intervention.Horaire2 ? intervention.Horaire2|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ intervention.Duration }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-center">
    <a class="btn btn-primary m-3" href="{{ path('app_intervention_index') }}">Retour</a>

    <a class="btn btn-primary m-3" href="{{ path('app_intervention_edit', {'id': intervention.id}) }}">Modifier</a>

   <a> {{ include('account/intervention/_delete_form.html.twig') }}</a>
    </div>
    </section>
{% endblock %}
